<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimuladorDeVader" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="miEstilo" parent="Theme.SimuladorDeVader">
        <item name="colorPrimary">@color/MiRojo</item>
        <item name="colorPrimaryVariant">@color/MiNegro</item>
        <item name="colorOnPrimary">@color/MiAzul</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/MisDetalles</item>
        <item name="colorSecondaryVariant">@color/MiNegro</item>
        <item name="colorOnSecondary">@color/MiNegro</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>